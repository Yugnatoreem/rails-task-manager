<h1>Here are your tasks:</h1>

<%= link_to "Create a new task", tasks_new_path%>

<div>
  <% @tasks.each do |task| %>
    <div class="d-flex">
      <div class="border ms-5 taille">
      <%= link_to task_path(task) do %>
        <%= task.completed %>
        <%= task.title %>
        <% end %>
      </div>
        <%= link_to "Delete", destroy_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Sure ?"} %>
    </div>
  <% end %>
</div>
